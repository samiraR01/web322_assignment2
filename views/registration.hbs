<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration</title>

    <link rel="stylesheet" href="register-style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
    <meta
      property="og:description"
      content="Web Hosting Canada offers Powerful Canadian Web Hosting Plans including Free Domain, Site Builder, Wordpress, Email &amp; 24/7 support. Start now!"
    />

    <!-- Optional theme -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"
      integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp"
      crossorigin="anonymous"
    />

    <!-- Latest compiled and minified JavaScript -->
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
      integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <section class="h-100 h-custom gradient-custom-2">
      <div class="container py-5 h-100">
        <div class="col-lg-6 bg-indigo">
          <div class="p-5">
            <form action="/registration" method="post">
              <h3
                class="fw-normal mb-5"
                style="
                color: #69696d;
                font-family: FuraCode Nerd Font, -apple-system;
                text-align: center;
              "
              >
                Create Account
              </h3>
              {{#if error}}
                <small class="error">{{error}}</small>
              {{/if}}
              <h4
                class="fw-normal mb-5"
                style="
                color: #1d0c9e;
                font-family: FuraCode Nerd Font, -apple-system;
                text-align: center;
              "
              >
                Personal Information
              </h4>
              <div class="mb-4 pb-2">
                <div class="form-outline form-white">
                  <input
                    type="text"
                    name="firstName"
                    class="form-control"
                    id="exampleInputName"
                    placeholder="Fist Name"
                  />
                  <br />
                </div>
                <div class="mb-4 pb-2">
                  <div class="form-outline form-white">
                    <input
                      type="text"
                      name="lastName"
                      class="form-control"
                      id="exampleInputName"
                      placeholder="Last Name"
                    />
                    <br />
                  </div>
                  <div class="mb-4 pb-2">
                    <div class="form-outline form-white">
                      <input
                        type="email"
                        name="email"
                        class="form-control"
                        id="exampleInputEmail"
                        placeholder="Email Address"
                      />
                      <br />
                    </div>
                    <div class="mb-4 pb-2">
                      <div class="form-outline form-white">
                        <input
                          type="text"
                          name="phone"
                          class="form-control"
                          id="exampleInputPhone"
                          placeholder="Phone Number"
                        />
                      </div>
                      <h4
                        class="fw-normal mb-5"
                        style="
                        color: #1d0c9e;
                        font-family: FuraCode Nerd Font, -apple-system;
                        text-align: center;
                      "
                      >
                        Billing Address
                      </h4>
                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white">
                          <input
                            type="text"
                            name="companyAddress"
                            class="form-control"
                            id="exampleInputCompanyName"
                            placeholder="Company Name"
                          />
                          <br />
                        </div>
                      </div>
                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white">
                          <input
                            type="text"
                            name="address"
                            class="form-control"
                            id="exampleInputAddress"
                            placeholder="Street Address"
                          />
                          <br />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-5 mb-4 pb-2">
                          <div class="form-outline form-white">
                            <input
                              type="text"
                              name="postalCode"
                              class="form-control"
                              id="exampleInputPostalCode"
                              placeholder="Postal Code"
                            />
                          </div>
                        </div>
                        <div class="col-md-7 mb-4 pb-2">
                          <div class="form-outline form-white">
                            <input
                              type="text"
                              name="city"
                              class="form-control"
                              id="exampleInputCity"
                              placeholder="City"
                            />
                            <br />
                          </div>
                        </div>
                      </div>
                      <div class="mb-4 pb-2">
                        <div class="form-outline form-white">
                          <input
                            type="text"
                            name="country"
                            class="form-control"
                            id="exampleInputCountry"
                            placeholder="Country"
                          />
                          <br />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-5 mb-4 pb-2">
                          <div class="form-outline form-white">
                            <input
                              type="Password"
                              name="password"
                              class="form-control"
                              id="exampleInputPassword"
                              placeholder="Password"
                            />
                          </div>
                        </div>
                        <div class="col-md-7 mb-4 pb-2">
                          <div class="form-outline form-white">
                            <input
                              type="Password"
                              name="confirmPassword"
                              class="form-control"
                              id="exampleInputPassword"
                              placeholder="Confirm Password"
                            />
                            <br />
                          </div>
                        </div>
                      </div>
                      <div
                        class="form-check d-flex justify-content-start mb-4 pb-3"
                      >
                        <input
                          class="form-check-input me-3"
                          type="checkbox"
                          value=""
                          id="form2Example3c"
                        />

                        <label
                          class="form-check-label text-white"
                          for="form2Example3"
                        >
                          I do accept the
                          <a href="#!" class="text-white"><u>Terms and
                              Conditions</u></a>
                          of your site.
                        </label>
                      </div>
                      <br /><input
                        type="submit"
                        class="btn btn-primary"
                        style="margin-left: 200px"
                        value="Register"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <footer class="footer spec">
      <div class="footer-data">2021 Web Hosting Canada</div>
    </footer>
  </body>
</html>